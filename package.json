{
  "name": "sunshade",
  "productName": "Sunshade",
  "version": "0.1.3",
  "description": "Sunshade: AI paper analysis tool",
  "author": "Neoul <neoul.ro@gmail.com>",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win --x64",
    "build:linux": "electron-builder --linux --x64",
    "build:all": "npm run build:win && npm run build:linux && npm run build:mac"
  },
  "build": {
    "appId": "com.sunshade.app",
    "productName": "Sunshade",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "src/**/*",
      "renderer/**/*",
      "!dist/*",
      "!**/*.ts",
      "!**/*.map"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "src/icon.png"
    },
    "dmg": {
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "src/icon.png"
    },
    "nsis": {
      "artifactName": "${productName}-${version}-windows-${arch}-setup.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-${version}-windows-${arch}-portable.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "src/icon.png",
      "category": "Office"
    },
    "deb": {
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}"
    },
    "appImage": {
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}"
    }
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "katex": "^0.16.9",
    "keytar": "^7.9.0",
    "marked": "^11.1.1",
    "pdfjs-dist": "^4.8.69"
  }
}
